<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/default_header_bg" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="张小龙"
        android:textColor="#3A3A3A"
        android:textSize="14sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:background="@color/line_between"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button12"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        style="@style/release_task_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="发布我的任务"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/button12"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/take_photo_bg_normal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:background="@drawable/myinfo_tasklist_button_selector"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:text="已完成"
                android:textColor="#3a3a3a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#009eea"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:text="个任务"
                android:textColor="#3a3a3a" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_between" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:background="@drawable/myinfo_tasklist_button_selector"
              >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="3"
                android:textColor="#009eea"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:text="个任务等待审判"
                android:textColor="#3a3a3a" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_between" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:background="@drawable/myinfo_tasklist_button_selector"
              >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:text="已发出"
                android:textColor="#3a3a3a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#009eea"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:text="个任务"
                android:textColor="#3a3a3a" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_between" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:background="@drawable/myinfo_tasklist_button_selector"
              >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="3"
                android:textColor="#009eea"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="9dp"
                android:text="个任务正在进行"
                android:textColor="#3a3a3a" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginBottom="10dp"
        android:background="@drawable/prologue_bg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/button12"
        android:layout_marginRight="36dp"
        android:text="4条新消息"
        android:textColor="#009eea"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="积分"
        android:textColor="#7d7d7d" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="7dp"
        android:text="经验/等级"
        android:textColor="#7d7d7d" />

    <ProgressBar
        android:id="@+id/bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView4"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/progress_style" />

    <LinearLayout
        android:id="@+id/button111"
        android:layout_width="350dp"
        android:layout_height="132dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/take_photo_bg_normal"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_set"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:background="@drawable/take_photo_bg_normal"
        android:orientation="vertical" >
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="意见反馈"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:textColor="#3a3a3a"
            />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_between" />
        <Button
            android:layout_marginTop="10dp"
            android:textColor="#3a3a3a"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_between" />
        <Button 
            android:background="#00000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="#3a3a3a"
            android:layout_height="wrap_content"
            android:text="应用设置"
            android:paddingBottom="10dp"
            />
    </LinearLayout>

</RelativeLayout>